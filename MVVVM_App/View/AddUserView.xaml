             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVVM_App.View"
             xmlns:com="clr-namespace:MVVVM_App.Controller"
             xmlns:vm="clr-namespace:MVVVM_App.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="Transparent">
        <TextBlock  Text="Add User:" Padding="10" FontSize="25" FontWeight="Bold" Grid.ColumnSpan="99"/>
        <Border BorderBrush="Black" BorderThickness="3">
            <com:UserviewDetailFormVM DataContext="{Binding UserViewerDeatailsFormVM}"/>
        </Border>    
    </Grid>
