             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVVM_App.View"
             xmlns:con="clr-namespace:MVVVM_App.Controller"
             xmlns:xm="clr-namespace:MVVVM_App.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid Background="Transparent">
        <TextBlock  Text="Edit User:" Padding="10" FontSize="25" FontWeight="Bold" Grid.ColumnSpan="99"/>
        <Border BorderBrush="Black" BorderThickness="3" Margin="5" CornerRadius="15">
            <con:UserviewDetailFormVM DataContext="{Binding UserViewerDeatailsFormVM}"/>
        </Border>
    </Grid>
</UserControl>
